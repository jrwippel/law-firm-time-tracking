@model WebAppSystems.Models.ValorCliente

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<hr />

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Valores Clientes/Área</h4>
        <hr />
        <form asp-action="Create">
        <dl class="row">
        <dt class = "col-sm-2">
            Cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Client.Name)
        </dd>
        <dt class = "col-sm-2">
            Advogado/Sócio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Attorney.Name)
        </dd>
        <dt class = "col-sm-2">
            Valor/Hora
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
            </dl>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>